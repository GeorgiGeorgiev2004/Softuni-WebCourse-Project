@model ICollection<JobApplicationVM>
@{
    ViewBag.Title = "All current applications.";
    int count = 1;
    if (Model.Count == 0)
    {
        ViewBag.Title = "No unatended applications for now!";
    }
}
<h1 class="align-self-md-center">@ViewBag.Title</h1>

@foreach (var ja in Model)
{
    <div class="card w-50">
        <div class="card-header">Application number: @count</div>
        <div class="card-body">
            <div class="col-mb-4 d-inline">
                <a class="btn btn-success " asp-action="ShowCV" asp-controller="Admin" asp-route-id="@ja.Id">CV</a>
            </div>
            <div class="col-mb-4 d-inline">
                <a class="btn btn-success " asp-action="ShowDiploma" asp-controller="Admin" asp-route-id="@ja.Id">Diploma</a>
            </div>
            <div class="col-mb-4 d-inline">
                <a class="btn btn-success" asp-action="ShowCertification" asp-controller="Admin" asp-route-id="@ja.Id">Certifications</a>
            </div>
        </div>
        <div class="card-body">
            <a class="btn btn-success" asp-action="About" asp-controller="Admin" asp-route-AplicantId="@ja.AplicantId">More about this candidate.</a>
        </div>
    </div>
    count++;

}