@model ConversationVM
@{
    ViewBag.Title = "Contact has been made!";
}
<!--Sends the username of the current user to the chat.js code-->
<input type="hidden" value="@Model.UserId.ToString()" id="userInput" />
<input type="hidden" value="@Model.Id" id="conversationId" />
<script type="text/javascript">window.alert("Keep in mind that you are talking to a real human.\nBe mindful, polite and follow our guidlines!")</script>

<h2 class="text-center">@ViewBag.Title </h2>
<hr>
<div class="container-fluid">
    <div class="row">
        <div class="container-fluid col-md-8">
            <div class="row d-flex justify-content-center">
                <div class="col-md-12">
                    <div class="card" id="chat2">
                        <div class="card-header d-flex justify-content-between align-items-center p-1">
                            <h5 class="mb-0">Chat</h5>
                        </div>
                        <div class="card-body overflow-auto" data-mdb-perfect-scrollbar="true" style="position: relative;height:auto; max-height: 900px;width:auto;">
                            <ul class="list-group" id="messagesList">
                                @if (Model.Messages.Count>0)
                                {
                                    @foreach (var item in Model.Messages)
                                    {
                                        @if (item.TypeOfUser == 0)
                                        {
                                            <label asp-for="@item.Text">
                                                <small class="text-muted text-start">
                                                    Message send on: @item.TimeOfSend
                                                </small>
                                            </label>
                                            <li class="text-start list-group-item">@item.Text</li>
                                        }
                                        else
                                        {
                                            <label asp-for="@item.Text">
                                                <small class="text-muted text-end">
                                                    Message send on: @item.TimeOfSend
                                                </small>
                                            </label>
                                            <li class="text-end list-group-item">@item.Text</li>
                                        }
                                    }
                                }
                                @if (Model.Messages.Count==0)
                                {
                                    <li>No messages yet!</li>
                                    <hr>
                                }
                            </ul>
                        </div>
                        <div class="card-footer text-muted d-flex justify-content-start align-items-center p-1">
                            <input type="text" class="form-control form-control-lg" id="messageInput"
                                   placeholder="Type message">
                            <input type="button" id="sendButton" value="Send Message" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <img src="@Model.Specialist.ImageURL" style="max-width:300px;max-height:250px;">
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>