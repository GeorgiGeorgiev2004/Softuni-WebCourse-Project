@{
    ViewBag.Title = "Job Application";
    var currentUserId = Guid.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier));
}
<h1>@ViewBag.Title</h1>
<hr>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data">
            <h2>Register as a Specialist.</h2>
            <hr />
           <div class="form-floating">
                <small class="text-muted">Insert a scanned image of your CV here</small>
                <input class="form-control" name="CV" type="file"/>
            </div>
            <div class="form-floating">
                <small class="text-muted">Insert a scanned copy of your Diploma here</small>
                <input class="form-control" name="Diploma" type="file" />
            </div> 
            <div class="form-floating">
                <small class="text-muted">Insert a scanned image of any certifications you have here</small>
                <input class="form-control" type="file" name="Certification" />
            </div>
            <input class="btn btn-primary w-50" onclick="alert('You have submited your application! We will reach out to you by email for the results.')" type="submit" value="Submit!"/>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>