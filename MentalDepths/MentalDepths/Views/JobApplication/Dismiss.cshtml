@model EmailVM
@{
    ViewBag.Title = "Send an e-mail to the candidate";
}
<h1>@ViewBag.Title</h1>
<div class="container">
    <form method="post">
        <div class="form-floating">
            <input asp-for="@Model.Email" class="form-control" aria-required="true" />
            <label asp-for="@Model.Email"></label>
        </div>
        <div class="form-floating">
            <input asp-for="@Model.Subject" class="form-control" aria-required="true" />
            <label asp-for="@Model.Subject"></label>
        </div>
        <div class="form-floating">
            <input asp-for="@Model.Message" class="form-control" aria-required="true" />
            <label asp-for="@Model.Message"></label>
        </div>
        <input class="btn btn-outline-primary" type="submit"></input>
    </form>
</div>