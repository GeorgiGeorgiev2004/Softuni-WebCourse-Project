@model BookApointementVM
@{
    ViewBag.Title = "Contact has been made!";
}
<!--Sends the username of the current user to the chat.js code

-->
<input type="hidden" value="@User.Identity.Name" id="username" />
<script type="text/javascript">window.alert("Keep in mind that you are talking to a real human.\nBe mindful, polite and follow our guidlines!")</script>

<h2 class="align-self-center">@ViewBag.Title </h2>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            <img src="@Model.Specialist.ImageURL" style="max-width:300px;max-height:250px;"></img>
        </div>
        <div class="container-fluid col-md-6">
            <div class="row d-flex justify-content-center">
                <div class="col-md-12 col-lg-12 col-xl-6">
                    <div class="card" id="chat2">
                        <div class="card-header d-flex justify-content-between align-items-center p-1">
                            <h5 class="mb-0">Chat</h5>
                        </div>
                        <div class="card-body overflow-auto" data-mdb-perfect-scrollbar="true" style="position: relative;height:auto; max-height: 900px;width:auto;">
                            <ul id="messagesList"></ul>
                        </div>
                        <div class="card-footer text-muted d-flex justify-content-start align-items-center p-1">
                            <input type="text" class="form-control form-control-lg" id="messageInput"
                                   placeholder="Type message">
                            <input type="button" id="sendButton" value="Send Message" />
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-3">
            <img src="@Model.Specialist.ImageURL" style="max-width:300px;max-height:250px;"></img>
        </div>
        <div class="col-md-1"></div>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>