@model BookApointementVM
@{
    ViewBag.Title = "Book the apointment";
}
<h1>@ViewBag.Title</h1>
<hr>
<h2>You are setting up a meeting between @Model.Specialist.ApplicationUser.UserName and @Model.User.UserName</h2>
<form method="post">
    <div class="form-group">
        <div class="mb-3">
            <label asp-for="@Model.Date">Pick a date</label>
            <input asp-for="@Model.Date" class="form-control" type="datetime-local">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Address"></label>
            <input asp-for="@Model.Address" class="form-control" type="text">
        </div>
    </div>
    <input class="btn btn-primary mt-3" type="submit" value="Set an apointment"/>
</form>
